{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "eslint-plugin-prettier"],
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "no-undef": 0,
    "no-restricted-syntax": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "no-useless-escape": 0,
    "no-new": 0,
    "max-len": ["warn", { "code": 80 }]
  }
}
